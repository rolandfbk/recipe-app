<h1>This is the home page</h1>
<table>
    <caption>List of foods</caption>
    <thead>
        <tr>
            <th>Food</th>
            <th>Measurement unit</th>
            <th>Unit price</th>
            <th>Actions<th>
        </tr>
    </thead>
    </tbody>
    <% @foods.each do |food| %>
        <tr>
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td><%= food.price %></td>
            <td>
                <%= link_to food_path(food) do %>
                    Delete
                <% end %>
            </td>
        </tr>
    <% end %>
    <tbody>
</table>
<div>
    <%= link_to new_food_path do %>
         Add food
    <% end %>
</div>
