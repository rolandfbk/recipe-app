<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <div class="app_title">
      <h1>Recipe App</h1>
      <% if user_signed_in? %>
        <div>
          <%= link_to "Home", root_path %>
          <%= link_to "Recipe", recipes_path %>
          <%= link_to "Public Recipe", public_recipes_path %>
        </div>
        <div class="sign_out">
            <div>Welcome <%= current_user.name %></div>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, data: { turbo: false }, class:"btn_signout_from" %>
        </div>
      <% end %>
  </div>
  <div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
    <%= yield %>
  </body>
</html>
