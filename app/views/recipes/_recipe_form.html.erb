<%= form_with model: @recipe, url: recipes_path, local: true, class: "border p-5" do |f| %>
    <%= f.text_field :name, class:"mb-3 form-control", placeholder: "Name", autofocus: true %>
    <%= f.text_field :preparation_time, class:"mb-3 form-control", placeholder: "Preparation time" %>
    <%= f.text_field :cooking_time, class:"mb-3 form-control", placeholder: "Cooking time" %>
    <%= f.text_area :description, class:"mb-3 form-control", placeholder: "Description..." %>
    <%= f.submit 'Add recipe', class:"btn btn-primary" %>
<% end %>